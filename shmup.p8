function make_ship()
	ship={}
	ship.x=64
	ship.y=64
	ship.sprite = 1
	ship.speed = 2
end

function draw_ship()
	spr(ship.sprite, ship.x, ship.y)
end

function move_ship()
	if (btn(0)) then
		ship.x -= ship.speed
	end
	if (btn(1)) then
		ship.x += ship.speed
	end
	if (btn(2)) then
		ship.y -= ship.speed
	end
	if (btn(3)) then
		ship.y += ship.speed
	end
end

function screen_bounds(high, low)
	if (ship.x >= high) then
		ship.x = high
	elseif (ship.x <= low) then
		ship.x = low
	elseif (ship.y >= high) then
		ship.y = high
	elseif (ship.y <= low) then
		ship.y = low
	end
	
end
